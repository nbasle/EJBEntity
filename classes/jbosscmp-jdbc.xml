<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jbosscmp-jdbc PUBLIC "-//JBoss//DTD JBOSSCMP-JDBC 3.2//EN" "http://www.jboss.org/j2ee/dtd/jbosscmp-jdbc_3_2.dtd">

<jbosscmp-jdbc>
    <defaults>
        <datasource>java:/helloPetstoreDS</datasource>
        <datasource-mapping>mySQL</datasource-mapping>
    </defaults>

    <enterprise-beans>
        <entity>
            <ejb-name>HelloBean</ejb-name>
            <table-name>HELLO_PETSTORE</table-name>

            <cmp-field>
                <field-name>cle</field-name>
                <column-name>cle</column-name>
                <jdbc-type>VARCHAR</jdbc-type>
                <sql-type>varchar(10)</sql-type>
            </cmp-field>

            <cmp-field>
                <field-name>valeur</field-name>
                <column-name>valeur</column-name>
                <jdbc-type>VARCHAR</jdbc-type>
                <sql-type>varchar(50)</sql-type>
            </cmp-field>
        </entity>
    </enterprise-beans>

</jbosscmp-jdbc>
