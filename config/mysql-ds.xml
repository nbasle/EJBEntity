<datasources>

  <local-tx-datasource>
    <jndi-name>petstoreDS</jndi-name>
    <connection-url>jdbc:mysql://localhost:3306/petstore</connection-url>
    <driver-class>com.mysql.jdbc.Driver</driver-class>
    <user-name>root</user-name>
    <password></password>
  </local-tx-datasource>

</datasources>
